<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scrollbars="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/ivFotoKomplain"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avatarr" />

        <Button
            android:id="@+id/btnFoto"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_below="@id/ivFotoKomplain"
            android:background="@drawable/fotoicon"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/etJudul"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul"
            android:textColorHint="#80FFFFFF"
            android:padding="8dp"
            android:inputType="text"
            android:background="@drawable/border"
            android:textColor="#80FFFFFF"
            android:layout_below="@id/btnFoto"/>

        <EditText
            android:id="@+id/etKeluhan"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Keluhan"
            android:textColorHint="#80FFFFFF"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:background="@drawable/border"
            android:textColor="#80FFFFFF"
            android:layout_below="@id/etJudul"/>

        <EditText
            android:id="@+id/etLokasi"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lokasi"
            android:textColorHint="#80FFFFFF"
            android:padding="8dp"
            android:inputType="text"
            android:background="@drawable/border"
            android:textColor="#80FFFFFF"
            android:layout_below="@id/etKeluhan"/>

        <Spinner
            android:id="@+id/spinnerKategori"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:textColor="#80FFFFFF"
            android:layout_below="@id/etLokasi"/>

        <Button
            android:id="@+id/btnTambahKomplain"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Kirim"
            android:background="@drawable/btn_primary_bg"
            android:theme="@style/PrimaryButton"
            android:layout_below="@id/spinnerKategori"/>

        <Button
            android:id="@+id/btnSkip"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Lewati"
            android:background="@drawable/buttonmerah"
            android:theme="@style/PrimaryButton"
            android:layout_below="@id/btnTambahKomplain"/>

    </RelativeLayout>

</ScrollView>