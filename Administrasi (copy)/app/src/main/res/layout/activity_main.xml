<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/gg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btListAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_primary_bg"
            android:fontFamily="@font/euclid_circular_bold"
            android:padding="12dp"
            android:text="List Admin"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:theme="@style/PrimaryButton" />

        <Button
            android:id="@+id/btListKategori"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_primary_bg"
            android:fontFamily="@font/euclid_circular_bold"
            android:padding="12dp"
            android:text="List Kategori"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:theme="@style/PrimaryButton" />

        <Button
            android:id="@+id/btListKomplain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_primary_bg"
            android:fontFamily="@font/euclid_circular_bold"
            android:padding="12dp"
            android:text="List Komplain"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:theme="@style/PrimaryButton" />
    </LinearLayout>
</RelativeLayout>